<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<VBox xmlns:fx="http://javafx.com/fxml" stylesheets="@../css/register.css" alignment="CENTER"
      prefHeight="1920.0" prefWidth="1080.0" fx:controller="com.example.javafx.controller.RegistrationController">
    <children>

        <!-- Fensterinhalt -->
        <AnchorPane fx:id="page" styleClass="container" VBox.vgrow="ALWAYS">
            <children>
                <Label fx:id="title" prefHeight="18.0" prefWidth="258.0" styleClass="title" text="Registrieren"
                       alignment="TOP_CENTER" textAlignment="CENTER"/>
                <!-- Formular -->
                <VBox alignment="BOTTOM_CENTER" prefHeight="596.0" prefWidth="480.0" styleClass="form" fx:id="form">
                    <children>
                        <!-- Bild-->
                        <VBox alignment="BOTTOM_CENTER" prefHeight="350.0" prefWidth="480.0">
                            <children>
                                <!-- SpÃ¤ter FileChooser einbauen -->
                                <Circle onMouseClicked="#uploadPicture" onMouseEntered="#hoverOverProfilePic"
                                        onMouseExited="#setDefaultProfilePic" fx:id="profilePic"
                                        styleClass="profile_pic"/>
                                <Button styleClass="edit_profile_pic" fx:id="editProfilePic"
                                        onAction="#editProfilePic"/>
                            </children>
                        </VBox>
                        <!-- Input-Teil -->
                        <VBox prefWidth="480.0" prefHeight="350.0" alignment="CENTER">
                            <children>
                                <TextField fx:id="username" styleClass="text_field" promptText="Username"/>
                                <PasswordField fx:id="password" styleClass="text_field" promptText="Passwort"/>

                                <VBox alignment="CENTER_RIGHT">
                                    <Label fx:id="loginLink" onMouseClicked="#sendToLogin" alignment="TOP_RIGHT"
                                           styleClass="small_text" text="Hast du bereits einen Account?"
                                           textAlignment="JUSTIFY"/>
                                </VBox>
                                <Button fx:id="submit" onAction="#register" alignment="BOTTOM_CENTER"
                                        mnemonicParsing="false" prefHeight="26.0" prefWidth="116.0"
                                        styleClass="submit_button" text="Registrieren"/>
                                <VBox fx:id="successOrErrorContainer" alignment="CENTER">
                                    <Label fx:id="bannerLabel" styleClass="banner-label"></Label>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</VBox>